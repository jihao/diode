<h2>帐号设置</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <fieldset>
  	<%= devise_error_messages! %>

	<div class="clearfix">
      <%= f.label :email %>
      <div class="input">
		<%= f.email_field :email,:class=>'xlarge' %>
		<span class="help-block">
		</span>
      </div>
    </div>
	<div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password,:class=>'xlarge' %>
		<span class="help-block">
		  <i>(leave blank if you don't want to change it)</i>
		</span>
      </div>
    </div>
	<div class="clearfix">
      <%= f.label :password_confirmation %>
      <div class="input">
        <%= f.password_field :password_confirmation,:class=>'xlarge' %>
      </div>
    </div>
	<div class="clearfix">
      <%= f.label :current_password %>
      <div class="input">
        <%= f.password_field :current_password,:class=>'xlarge' %>
		<span class="help-block">
		  <i>(we need your current password to confirm your changes)</i>
		</span>
      </div>
    </div>
	<div class="actions"><%= f.submit "Update",:class=>"btn primary" %></div>
	</fieldset>
<% end %>